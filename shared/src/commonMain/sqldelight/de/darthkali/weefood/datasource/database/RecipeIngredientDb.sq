-- -----------------------------------------------------
-- DELETE
-- -----------------------------------------------------
deleteRecipeIngredientById:
DELETE FROM recipeIngredient_Entity WHERE id = ?;

deleteAllRecipeIngredients:
DELETE FROM recipeIngredient_Entity;

